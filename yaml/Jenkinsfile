// 声明式Pipeline
pipeline {
  agent {
    kubernetes {
      workspaceVolume hostPathWorkspaceVolume(hostPath: "/data/jenkins/workspace", readOnly: false)
      yamlFile 'yaml/pod.yaml'
    }
  }
  stages {
    stage('Run shell') {
        sh "echo hello world"
        sh "pwd && ls -l ./"
        script {
            build_tag = sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
            }
          }
  }
}